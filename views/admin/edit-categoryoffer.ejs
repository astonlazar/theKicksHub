                <div class="card mb-4">
                    <div class="card-header">
                        <h4>Offer Details</h4>
                    </div>
                    <div class="card-body">
                        <form id="categoryAdd" method="post" action="/admin/offers/category/edit/<%= offerData._id %>" onsubmit="return validateForm()">

                            <div class="mb-4">
                                <label class="form-label">Offer Name</label>
                                <input type="text" name="offerName" id="offerName" onblur="validateOfferName()" value="<%= offerData.offerName %>" class="form-control" />
                                <div id="error-offerName" class="text-danger"></div>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Offer Description</label>
                                <input type="text" id="description" name="description" onblur="validateOfferDescription()" value="<%= offerData.offerDescription %>" class="form-control" />
                                <div id="error-description" class="text-danger"></div>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Offer Percentage</label>
                                <input type="number" id="Percentage" name="offerPercentage" onblur="validateOfferPercentage()" value="<%= offerData.discount %>" class="form-control" />
                                <div id="error-percentage" class="text-danger"></div>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Offer Type</label>
                                <input type="text" value="Category" name="offerType" class="form-control" readonly />
                            </div>
                            <p class="text-danger"><%= error %></p>
                            <button class="btn btn-primary" type="submit">Save</button>
                        </form>
                    </div>
                </div> <!-- card end// -->
