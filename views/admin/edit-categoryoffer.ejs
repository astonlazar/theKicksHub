<script>

function validateSelectCategory() {
            const categorySelect = document.getElementById('categorySelect');
            const productError = document.getElementById('productError');
            
            if (categorySelect.value === "") {
                productError.style.display = 'block';
                return false;
            } else {
                productError.style.display = 'none';
                return true;
            }
        }
        
        function validateOfferName() {
            const offerName = document.getElementById('offerName').value;
            const errorOfferName = document.getElementById('error-offerName');
            
            if (offerName === "") {
                errorOfferName.innerHTML = "Please fill the offer name";
                return false;
            } else {
                errorOfferName.innerHTML = "";
                return true;
            }
        }
        
        function validateOfferDescription() {
            const description = document.getElementById('description').value;
            const errorDescription = document.getElementById('error-description');
            
            if (description === "") {
                errorDescription.innerHTML = "Please enter the description";
                return false;
            } else {
                errorDescription.innerHTML = "";
                return true;
            }
        }
        
        function validateOfferPercentage() {
            const percentage = document.getElementById('Percentage').value;
            const errorPercentage = document.getElementById('error-percentage');
            
            if (percentage === "") {
                errorPercentage.innerHTML = "Please enter the percentage";
                return false;
            } else if (isNaN(percentage)) {
                errorPercentage.innerHTML = "Please enter a valid percentage";
                return false;
            } else {
                errorPercentage.innerHTML = "";
                return true;
            }
        }
        
        function validateForm() {
            const selectCategory = validateSelectCategory();
            const offerName = validateOfferName();
            const description = validateOfferDescription();
            const percentage = validateOfferPercentage();
            return selectCategory && offerName && description && percentage;
        }
</script>

