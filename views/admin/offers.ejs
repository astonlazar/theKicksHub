<script>
    function statusUpdate(offerId) {
        console.log('Offer Id - ', offerId)

        fetch("/admin/offers/status", {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({offerId: offerId})
        })
        .then(response => {
            if(response.ok){
                location.reload()
            }
        })
        .catch(error => {
            console.log(`Error in status update`, error)
        })
    }
</script>
