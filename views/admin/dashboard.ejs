                    filterData = {
                        startDate: today.toISOString().split('T')[0],
                        endDate: today.toISOString().split('T')[0]
                    };
                }
    
                if (e.target.innerText === "Last Week") {
                    let lastWeek = new Date();
                    lastWeek.setDate(today.getDate() - 7);
                    filterData = {
                        startDate: lastWeek.toISOString().split('T')[0],
                        endDate: today.toISOString().split('T')[0]
                    };
                }
    
                if (e.target.innerText === "Last Month") {
                    let lastMonth = new Date();
                    lastMonth.setDate(today.getDate() - 30);
                    filterData = {
                        startDate: lastMonth.toISOString().split('T')[0],
                        endDate: today.toISOString().split('T')[0]
                    };
                }
    
                console.log(filterData);
                if(filterData){
                    window.location.href = `/admin/dashboard?start=${filterData.startDate}&&end=${filterData.endDate}`
                }
    
                // fetch(`/admin/dashboard?startDate=${filterData.startDate}&endDate=${filterData.endDate}`, {
