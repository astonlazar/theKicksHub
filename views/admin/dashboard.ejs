        <script>
           let salesChart = null;

            async function getChartData(period) {
            const url = `/admin/dashboard/chart`;
            console.log(url);
            const response = await fetch(url, {
                method: "PUT",
                headers: {
                'Content-Type': "application/json"
                },
                body: JSON.stringify({ period: period })
            });
            const data = await response.json();

            const labels = data.map(d => {
                if (period === "day") {
                return new Date(d._id).toLocaleDateString();
                } else if (period === "month") {
                return `${d._id.year}-${String(d._id.month).padStart(2, '0')}`;
                } else {
                return d._id.year;
                }
            });

            const salesData = data.map(d => d.totalSales);

            const ctx = document.getElementById("salesChart").getContext("2d");

            if (salesChart) {
                salesChart.destroy(); // Destroy existing chart if it exists
            }

            salesChart = new Chart(ctx, {
                type: 'line',
                data: {
                labels,
                datasets: [{
                    label: `${period.charAt(0).toUpperCase()}${period.slice(1)} Sales`,
                    data: salesData,
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 1
                }]
                },
                options: {
                // Additional chart configuration options (e.g., scales, gridlines)
                }
            });
            }

            const buttons = document.querySelectorAll(".button-container button");

            buttons.forEach(button => {
            button.addEventListener("click", () => {
                const selectedPeriod = button.id.split('-')[0]; // Extract period from button ID
                getChartData(selectedPeriod);
            });
            });

            // Initial chart load (change to preferred default period)
            getChartData("day");        
</script>
