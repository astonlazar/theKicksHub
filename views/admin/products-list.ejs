  <script>
    function showStockModal(stock) {
        const stockDetailsBody = document.getElementById('stockDetailsBody');
        stockDetailsBody.innerHTML = '';
        stock = JSON.parse(stock)
        // console.log(stock)
        const sizes = ['UK6', 'UK7', 'UK8', 'UK9', 'UK10', 'UK11'];
        let totalStock = 0;
        sizes.forEach(size => {
            const quantity = stock[size].quantity !== 0 ? stock[size].quantity : 'Out of stock';
            const row = document.createElement('tr');
            const sizeCell = document.createElement('td');
            const quantityCell = document.createElement('td');
            totalStock += stock[size].quantity;
            
            sizeCell.innerText = size;
            quantityCell.innerText = quantity;

            row.appendChild(sizeCell);
            row.appendChild(quantityCell);
            stockDetailsBody.appendChild(row);
        });
        const totalStockCell = document.createElement('p')
        totalStockCell.innerText = 'Total Stock: '+totalStock
        stockDetailsBody.appendChild(totalStockCell)

        const stockModal = new bootstrap.Modal(document.getElementById('stockModal'));
        stockModal.show();
    }
</script>
    
