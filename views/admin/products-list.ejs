    <script>
        function statusUpdate(id, status, page) {
        console.log(id, status);
        const productId = id;
         // Show confirmation dialog based on the updated status
         if (status) {
                // Show "block product" confirmation
                            Swal.fire({
                                title: 'Are you sure?',
                                text: "Do you want to update the status of the product?",
                                icon: 'warning',
                                showCancelButton: true,
                                confirmButtonColor: '#3085d6',
                                cancelButtonColor: '#d33',
                                confirmButtonText: 'Yes'
                            }).then((result) => {
                            if (result.isConfirmed) {
                                // Call your function to update the user here
                                fetch(`/admin/products/status`, {
                                    method: 'PUT',
                                    headers: {
                                    'Content-Type': 'application/json' // Indicate sending JSON data
                                    },
                                    body: JSON.stringify({ productId: productId }) // Send updated isActive value
                                })
                                    .then(response => {
                                    if (response.ok) {
                                        console.log('Product status updated successfully!');
                        
                                    } else {
                                        console.error('Error updating product status:', response.statusText);
                                        // Handle errors appropriately (e.g., display error message)
                                    }
                                    })
                                    .catch(error => {
                                    console.error('Error:', error);
                                    // Handle network or other errors
                                    });
                                    setTimeout(() => {
                                        performProductUpdate(page);
                                    }, 1)
                                }
                            }).catch(() => {
                                console.log("dialog cancelled")
                            })
                }
        }

        function performProductUpdate(page) {
            window.location.reload('/admin/products?page='+page);
            console.log("User updated successfully!");
        }

