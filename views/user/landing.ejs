    <script>
        async function addToWishlist(productId) {
            console.log('Selected product Id - ', productId)
            await fetch('/addtowishlist', {
                method: "PUT",
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ productId })
            }).then(response => {
                if (response.ok) {
                    return response.json();
                } else {
                    throw new Error('Failed to add to wishlist');
                }
            }).then(data => {
                console.log(data.message);
                if(data.message == 'Already added to wishlist'){
                    Swal.fire({
                    icon: 'error',
                    title: 'Product already added to wishlist',
                    // text: 'The product has been successfully added to your wishlist!'
                });
                } else {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: 'The product has been successfully added to your wishlist!'
                    });
                }
            }).catch(error => {
                console.error(error);
                Swal.fire({
                    icon: 'error',
                    title: 'Login Required',
                    text: 'Login to add the product to wishlist',
                    showCancelButton: true,
                    confirmButtonText: 'Login',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '/login'; // Change '/login' to your actual login page URL
                    }
                });
            });
        }

    </script>
